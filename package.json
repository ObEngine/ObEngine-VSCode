{
	"name": "obengine",
	"displayName": "ObEngine",
	"description": "ÖbEngine support for VS Code",
	"version": "0.2.0",
	"publisher": "obengine",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other",
		"Debuggers",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:obengine.eggplant",
		"onStartupFinished",
		"onDebug"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ObEngine/ObEngine-VSCode.git"
	},
	"bugs": {
		"url": "https://github.com/ObEngine/ObEngine-VSCode/issues"
	},
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "obengine",
			"properties": {
				"obengine.executablePath": {
					"description": "Path to ÖbEngine executable",
					"type": "string"
				},
				"obengine.workingDirectory": {
					"description": "Path where ÖbEngine should execute",
					"type": "string"
				}
			}
		},
		"commands": [
			{
				"command": "obengine.eggplant",
				"title": "[ObEngine] Spawn eggplant"
			},
			{
				"command": "obengine.context",
				"title": "[ObEngine] Setup context"
			}
		],
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "obengine",
				"label": "ObEngine Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"languages": [
					"lua"
				],
				"variables": {},
				"configurationSnippets": [
					{
						"label": "[ObEngine] Run & Debug",
						"description": "Debug ObEngine project",
						"body": {
							"type": "obengine",
							"request": "attach",
							"name": "[ObEngine] Debug",
							"host": "localhost",
							"port": 21122,
							"preLaunchTask": "runobengine"
						}
					},
					{
						"label": "[ObEngine] Debug",
						"description": "Debug ObEngine project",
						"body": {
							"type": "obengine",
							"request": "attach",
							"name": "[ObEngine] Debug",
							"host": "localhost",
							"port": 21122
						}
					}
				],
				"configurationAttributes": {
					"attach": {
						"required": [
							"host",
							"port"
						],
						"properties": {
							"host": {
								"type": "string",
								"description": "ObEngine debugger host name.",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "ObEngine debugger port",
								"default": 21122
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				}
			}
		]
	},
	"extensionPack": [
		"sumneko.lua"
	],
	"license": "MIT",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"lrdb-debuggable-lua": "^0.5.4",
		"vscode-debugadapter": "^1.43.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^14.17.26",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"esbuild": "^0.13.6",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.4",
		"vscode-debugprotocol": "^1.43.0"
	}
}